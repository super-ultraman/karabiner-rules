{
    "description": "Windows app: Command +W to Ctrl+W",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^org\\.virtualbox\\.app\\.VirtualBoxVM$",
                        "^com\\.microsoft\\.rdc\\.macos$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "w",
                "modifiers": {
                    "mandatory": ["command"],
                    "optional": ["any"]
                }
            },
            "to": [
                {
                    "key_code": "f4",
                    "modifiers": ["fn", "left_option"]
                }
            ],
            "type": "basic"
        }
    ]
}
